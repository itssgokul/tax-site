---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Features from '../components/blocks/features/FeatureCards.astro'
import OurServices from '../components/blocks/Services/OurServices.astro'
import WhyUs from '../components/blocks/whyUs/WhyUs.astro'
import Testimonial from '../components/blocks/Testimonial/Testimonial.astro'
import BottomCTA from '../components/blocks/cta/BottomCTA.astro' // Import the new CTA component

// Content
