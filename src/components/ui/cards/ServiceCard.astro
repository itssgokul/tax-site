---
// src/components/ui/cards/ServiceCard.astro
interface Props {
	title: string;
	description: string;
	linkHref: string;
}

const { title, description, linkHref } = Astro.props;
---

<div class="mb-4 w-full px-2 sm:w-1/2">
	{/* Modernized Service Card */}
	<div
		class="group h-full rounded-xl border border-neutral-200 bg-white p-6 shadow-sm transition-all duration-300 ease-in-out hover:-translate-y-1 hover:border-primary-500 hover:shadow-md dark:border-neutral-700 dark:bg-neutral-800 dark:hover:border-primary-400"
	>
		{/* Adjusted heading size and margin */}
		<h3 class="mb-3 text-center text-xl font-bold sm:text-left" set:html={title} />
		{/* Adjusted paragraph text color */}
		<p class="mb-0 text-sm text-neutral-700 dark:text-neutral-300">
			{description}
			{/* Adjusted link styling */}
			<a
				href={linkHref}
				class="highlight ml-1 text-sm font-semibold text-primary-600 transition-colors duration-200 group-hover:text-primary-700 dark:text-primary-400 dark:group-hover:text-primary-300"
			>
				Read more &rarr; {/* Added arrow */}
			</a>
		</p>
	</div>
</div>
