---
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
import { Image } from 'astro:assets'
import services from '../../../assets/our-sevices.svg' // Fixed typo: sevices -> services
import ServiceCard from '../../ui/cards/ServiceCard.astro'

// Define the type for service data items
interface ServiceDataItem {
	title: string;
	icon: string; // Re-add icon to type
	description: string;
	linkHref: string;
}

const serviceData: ServiceDataItem[] = [ // Explicitly type the array
	{
		title: 'Accounting Services',
		icon: 'chart-pie', // Re-add icon data
		description:
			'Streamline your finances with our Accounting Services and Company Accounts Management. We handle Bookkeeping and Financial Reporting, giving you clear insights so you can focus on growth.',
		linkHref: '/services/#accounting-services'
	},
	{
		title: 'Tax Services',
		icon: 'scale', // Re-add icon data
		description:
			'Stay compliant with our Income Tax Returns, GST & TDS Filings, Professional Tax, and Sales Tax/VAT Consultancy. We also manage Company Law Compliance, ESI & EPF Returns, and provide Income Tax Consultancy to simplify your tax needs.',
		linkHref: '/services/#tax-services'
	},
	{
		title: 'Business <br /> Registration & Compliance', // Restore <br /> tag
		icon: 'clipboard-document-list', // Re-add icon data
		description:
			'Get your business started with Partnership Registration, Company Incorporation, MSME Registration, and FSSAI Registration. We handle ongoing needs like Trust Incorporation and ROC Filing to keep your business legally sound.',
		linkHref: '/services/#business-registration-compliance'
	},
	{
		title: 'Financial Advisory',
		icon: 'arrow-trending-up', // Re-add icon data
		description:
			'Achieve financial security with our Investment Advisory, Asset Management, and Financial Planning services. We offer Mutual Fund Advisory and comprehensive Insurance Options like Term, Health, and Vehicle Insurance to protect your future.',
		linkHref: '/services/#financial-advisory'
	}
]
---

<Section id="features">
	<Row classes="items-center">
		<Col span="5" classes="hidden md:block">
			<Image
				src={services}
				alt="Illustration representing OnePointTax's range of services"
				class="h-full w-full md:h-5/6 md:w-5/6 dark:shadow-neutral-950"
				format="webp"
			/>
		</Col>
		<Col span="7">
			<section aria-labelledby="our-services-heading">
				{/* Adjusted heading size and bottom margin */}
				<h2
					id="our-services-heading"
					class="mb-8 text-pretty text-center text-4xl font-bold md:text-left"
				>
					Our <strong>Services</strong> {/* Swapped strong tag */}
				</h2>

				{/* Adjusted margins and gap for the card container */}
				<div class="-mx-3 mt-6 flex flex-wrap">
					{' '}
					{/* Removed -mb-4, adjusted negative margin */}
					{
						serviceData.map((service) => {
							const iconName = service.icon; // Assign to intermediate variable
							return (
								// Added bottom padding/margin implicitly via ServiceCard's mb-4
								<ServiceCard
									title={service.title}
									description={service.description}
									linkHref={service.linkHref}
									icon={iconName}
								/>
							);
						})
					}
				</div>
			</section>
		</Col>
	</Row>
</Section>
