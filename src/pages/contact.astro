---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'

// Content
// - SEO
const SEO = {
	title: 'OnePoint. | Get in Touch with Us',
	description:
		'Have questions or need assistance? Contact OnePoint. today for support, inquiries, or feedback. Our team is here to help you make the most of your OnePoint. experience.'
}
// - Page Header
const header = {
	title: "We're <strong>here</strong>  to help!",
	text: 'Got questions or need assistance? Fill out the form below, and our team will get back to you promptly to discuss how we can support your financial and business needs. For faster assistance, <br> <span class="text-primary-500"> Feel Free </span> to Call, Email, or reach us on WhatsApp.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
	/>
</Layout>
